<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editUserAvatarList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="400dp"
        android:layout_height="490dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/closeDialogueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            app:cornerRadius="20dp"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            android:text="@string/close" />

        <ImageButton
            android:id="@+id/editAvatarButton1"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatars1" />

        <ImageButton
            android:id="@+id/editAvatarButton2"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatars2" />

        <ImageButton
            android:id="@+id/editAvatarButton3"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/avatars3" />

        <ImageButton
            android:id="@+id/editAvatarButton6"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="68dp"
            android:src="@drawable/avatars6" />

        <ImageButton
            android:id="@+id/editAvatarButton5"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_marginBottom="68dp"
            android:src="@drawable/avatars5" />

        <ImageButton
            android:id="@+id/editAvatarButton4"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="68dp"
            android:src="@drawable/avatars4" />

        <ImageButton
            android:id="@+id/editAvatarButton9"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/avatars9" />

        <ImageButton
            android:id="@+id/editAvatarButton7"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/avatars7" />

        <ImageButton
            android:id="@+id/editAvatarButton8"
            android:layout_width="119dp"
            android:layout_height="129dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="80dp"
            android:src="@drawable/avatars8" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>