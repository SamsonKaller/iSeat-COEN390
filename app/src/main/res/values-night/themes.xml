
<!-- Dark theme -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color -->
        <item name="android:statusBarColor" >@color/black</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/teal_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/orange</item>

    </style>

    <!-- Toolbar Theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:textColorPrimary">@color/teal_light</item>
        <item name="actionMenuTextColor">@color/teal_light</item>
        <item name="selectableItemBackgroundBorderless">@color/page_background_color</item>
    </style>

    <!-- Settings theme -->
    <style name="DefaultTheme.ActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:textColorPrimary">@color/teal_light</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/orange</item>
    </style>
</resources>