
<!-- Light theme -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color -->
        <item name="android:statusBarColor" >@color/teal_light</item>
        <!-- Status bar color -->
        <item name="colorPrimary">@color/teal_light</item>

        <!-- Title color -->
        <item name="colorOnPrimary">@color/blue_dark</item>

        <item name="colorPrimaryVariant">@color/blue_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>

    </style>

    <!-- Toolbar Theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor" >@color/teal_light</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="actionMenuTextColor">@color/blue</item>
        <item name="selectableItemBackgroundBorderless">@color/page_background_color</item>
    </style>

    <!-- Settings theme -->
    <style name="DefaultTheme.ActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor" >@color/teal_light</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="colorPrimary">@color/teal_light</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

</resources>